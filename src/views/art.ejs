<!DOCTYPE html>
<html lang="es">

    <%- include partials/head -%>

    <body data-barba="wrapper">
        <main class="wrapper art" data-barba="container" data-barba-namespace="art">
            <div class="content container position-relative">
                <div class="row">
                    <div class="col-12 art-container d-flex text-center">
                        <a>
                            <img id="art-img" src="{{fullSize}}" alt="{{title}}" class="figure-img img-fluid" alt="Responsive image">
                        </a>
                    </div>
                </div>
                <div class="row art-info-container">
                    <div class="col-12">
                        <h5>{{title}}</h5>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
        </main>

        <%- include partials/overlay -%>

        <script crossorigin="anonymous" src="https://polyfill.io/v3/polyfill.min.js?features=default%2CArray.prototype.find%2CIntersectionObserver"></script>
    </body>
</html>
