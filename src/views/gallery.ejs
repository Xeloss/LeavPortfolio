<!DOCTYPE html>
<html lang="es">

    <%- include partials/head -%>

    <body data-barba="wrapper">
        <main class="wrapper gallery" data-barba="container" data-barba-namespace="gallery">
            <div class="content container">

                <div class="d-flex flex-column">
                    <div class="row">
                        <div class="col-12 text-center">
                            <img class="title" src="<%= require('../assets/images/section-title.png') %>" alt="Leav CafÃ© - Ilustrator & Comic Artist" />
                        </div>
                    </div>

                    <%- include partials/links -%>

                    <div class="row thumbnail-list flex-grow-1 justify-content-center">
                        {{#repeat 3}}
                            <div class="col-xl-3 col-2">
                                <div class="row">
                                    {{#each (segment artItems $iteration 3)}}
                                        <div class="col-12">
                                            <div class="thumbnail">
                                                <a href="art.html?id={{id}}">
                                                    <img src="{{thumbnail}}" alt="{{title}}" class="img-fluid">
                                                    <div class="thumbnail-overlay">
                                                        <span>{{title}}</span>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
                        {{/repeat}}
                    </div>
                </div>
            </div>

            <%- include partials/background -%>
        </main>

        <%- include partials/overlay -%>

        <script crossorigin="anonymous" src="https://polyfill.io/v3/polyfill.min.js?features=default%2CArray.prototype.find%2CIntersectionObserver"></script>
    </body>
</html>
